<div class="build-head">
    <div class="build-head-title">Edit {{singleGpuCooler.name}}</div>
    <a class="build-head-return" href="/gpucooler/{{singleGpuCooler._id}}">
        <= Return to {{singleGpuCooler.name}}</a>
</div>


<form action="/gpucooler/{{singleGpuCooler._id}}?_method=PUT" method="POST">

    <div class="list-item">

        <label>Rename Your GPU Cooler</label>
        <input type="text" name="name" value="{{singleGpuCooler.name}}"/>
        <br />
        <label>Manufacturer:</label>
        <select type="text" name="brand">
            <option>Same as GPU</option>
            <option>MZXD</option>
            <option>BKwb</option>
        </select>
        <br />
        <label>Cooler Design:</label>
        <select type="text" name="type">
            <option>Integrated (Air)</option>
            <option>Hybrid Water (AIO)</option>
            <option>Open-loop Water (Block)</option>
        </select>

    </div>

    <div class="footer">
        <input class="footer-update" type="submit" value="Save Edits" />
    </div>

</form>