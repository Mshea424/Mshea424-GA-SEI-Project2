<h1>Edit Cpu Report</h1>

<form action="/cpu/{{singleCpu._id}}?_method=PUT" method="POST">
    <label>Cpu Description:</label>
    <input type="text" name="description" value="{{singleCpu.description}}"/required>

    <label>Date Reported:</label>
    <input id= "date" type="date" name="createdAt" value="{{singleCpu.createdAt}}"/>

    <label>Status:</label>
    <input type="text" name="status" value="{{singleCpu.status}}"/>

    <label>Level Of Priority:</label>
    <select type="text" name="priority" required/>
      <option>High</option>
      <option>Medium</option>
      <option>Low</option>
    </select>
    
    <input type="submit" value ="Save Edits"/>
</form>
<script>
    document.querySelector("#date").valueAsDate = new Date();
</script>