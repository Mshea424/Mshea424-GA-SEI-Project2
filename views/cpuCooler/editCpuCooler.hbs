<div class="build-head">
    <div class="build-head-title">Edit {{singleCpuCooler.name}}</div>
    <a class="build-head-return" href="/cpucooler/{{singleCpuCooler._id}}">
        <= Return to {{singleCpuCooler.name}}</a>
</div>


<form action="/cpucooler/{{singleCpuCooler._id}}?_method=PUT" method="POST">

        <div class="list-item">

        <label>Rename Your CPU Cooler</label>
        <input type="text" name="name" value="{{singleCpuCooler.name}}" />
        <br />
        <label>Manufacturer:</label>
        <select type="text" name="brand">
            <option>Corsail</option>
            <option>TeamRed.llc</option>
            <option>Bsilent</option>
            <option>BKwb</option>
        </select>
        <br />
        <label>Cooler Design:</label>
        <select type="text" name="type">
            <option>CPU stock (air)</option>
            <option>Air (aftermarket)</option>
            <option>Closed-loop Water (AIO)</option>
            <option>Open-loop Water (block)</option>
        </select>

    </div>

    <div class="footer">
        <input class="footer-update" type="submit" value="Save Edits" />
    </div>

</form>