<div class="build-head">
    <div class="build-head-title">Add new Motherboard</div>
    <a class="build-head-return" href="/mb"> <= Return to All Motherboards</a>
</div>
<form action="/mb" method="POST">

<div class="list-item">

        <label>Name Your Motherboard</label>
        <input type ="text" name="name" value="{{singleMb.name}}" required/>
<br/>
        <label>Manufacturer:</label>
        <select type="text" name="brand" value="{{singleMb.brand}}">
            <option>ACES</option>
            <option>EBGH</option>
            <option>Gigabit</option>
            <option>NSI</option>
        </select>
<br/>
        <label>Size Class:</label>
        <select type="text" name="class" value="{{singleMb.class}}">
            <option>Mini-ITX</option>
            <option>Micro-ATX</option>
            <option>ATX (standard)</option>
            <option>XL-ATX</option>
        </select>
<br/>
        <label>Status:</label>
        <select type="text" name="socketType" value="{{singleMb.socketType}}">
            <option>TeamRed</option>
            <option>TeamBlue</option>
        </select>
</div>
    <input class="add-button" type="submit" value ="Add Motherboard to DataBase"/>
</form>
