<div class="build-head">
    <div class="build-head-title">Edit {{singleBuild.name}}</div>
    <a class="build-head-return" href="/build/{{singleBuild._id}}">
        <= Return to {{singleBuild.name}}</a>
</div>

<form action="/build/{{singleBuild._id}}?_method=PUT" method="POST">

    <div class="list-item">
        <label>Name Your Build:</label>
        <input type="text" name="name" value="{{singleBuild.name}}" />
        <br />
        <label>Select Your MotherBoard:</label>
        <select name="mbId">
            {{#each allMbs}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your CPU:</label>
        <select name="cpuId">
            {{#each allCpus}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your RAM Kit:</label>
        <select name="ramId">
            {{#each allRams}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your GPU:</label>
        <select name="gpuId">
            {{#each allGpus}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your Power Supply:</label>
        <select name="psuId">
            {{#each allPsus}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your CPU Cooler:</label>
        <select name="cpuCoolerId">
            {{#each allCpuCoolers}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your GPU Cooler:</label>
        <select name="gpuCoolerId">
            {{#each allGpuCoolers}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your PC Case:</label>
        <select name="caseId">
            {{#each allCases}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <br />
        <label>Select Your Fan Setup:</label>
        <select name="fanId">
            {{#each allFans}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="footer">
    <input class="footer-update" type="submit" value ="Save Edits"/>
</div>
</form>
