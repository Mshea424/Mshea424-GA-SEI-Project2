
<div class="build-head">
    <div class="build-head-title">{{singleBuild.name}}</div>
    <a class="build-head-return" href="/build"> <= Return to List of All Builds</a>
</div>

    <a href="/build/{{singleBuild._id}}/edit"><button>Edit {{singleBuild.name}}</button></a>

    <form action="/build/{{singleBuild._id}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete {{singleBuild.name}}">
    </form>

<div class="item-head">
    <div>Motherboard: {{singleMb.name}}</div>  
</div>

<div class="list-item">
    <div class="item">
        <div>Brand:</div>
        <div class="item-value">{{singleMb.brand}}</div>
    </div>
    <div class="item">
        <div>Size Class:</div>
        <div class="item-value">{{singleMb.class}}</div>
    </div>
    <div class="item">
        <div>Socket Type:</div>
        <div class="item-value">{{singleMb.socketType}}</div>
    </div>
    <a class="edit-button" href="/mb/{{singleMb._id}}/edit">Edit {{singleMb.name}}</a>
    <div>
        <label>Select different Mb:</label>
        <select name="mbId">        
            {{#each allMbs}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>    
</div>   

